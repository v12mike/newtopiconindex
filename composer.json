{
	"name": "v12mike/newtopiconindex",
	"type": "phpbb-extension",
	"description": "This extension adds a 'New Topic' button on the forum index page",
	"homepage": "https://github.com/v12mike/newtopiconindex",
	"version": "1.0.0-beta",
	"keywords": [
	        "phpbb",
	        "extension",
	        "newtopiconindex"
	],
	"license": "GPL-2.0-only",
	"authors": [
		{
			"name": "Mike Morrin (v12mike)",
			"role": "Developer"
		}
	],
	"require": {
		"php": ">=5.3.3",
		"composer/installers": "~1.0",
		"phpbb/phpbb": ">=3.3.0,<3.4.0"
	},
	"extra": {
		"display-name": "New Topic On Index",
		"soft-require": {
			"phpbb/phpbb": ">=3.3.0,<3.4.0"
		},
		"version-check": {
			"host": "frenchcarforum.co.uk",
			"directory": "/versions",
			"filename": "phpbb-newtopiconindex.json"
		}
	}
}
